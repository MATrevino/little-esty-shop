<h3>Edit Bulk Discount</h3>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, value: @bulk_discount.name %>

  <%= f.label :percentage_discount %>
	<%= f.text_field :percentage_discount, value: @bulk_discount.percentage_discount  %>

  <%= f.label :quantity_threshold %>
	<%= f.text_field :quantity_threshold, value: @bulk_discount.quantity_threshold  %>

	<%= f.submit "Update Discount" %>
<% end %>